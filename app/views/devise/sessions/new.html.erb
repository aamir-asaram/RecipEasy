<h2 class="text-2xl font-semibold mb-4 mt-8 ml-[5%]">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-1/5 ml-[5%] mt-8" }) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 rounded shadow appearance-none border border-gray-300 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-6">
    <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 rounded shadow appearance-none border border-gray-300 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= f.submit "Log in", class: "mb-8 bg-yellow-300 hover:bg-yellow-500 font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
