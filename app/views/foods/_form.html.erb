<%= form_with(model: food, local: true, html: { class: "ml-[5%] p-4 shadow-lg w-1/5" }) do |form| %>
  <% if food.errors.any? %>
    <div class="text-red-500">
      <h2 class="font-bold text-lg"><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul class="list-disc list-inside">
        <% food.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-sm font-bold text-gray-600" %>
    <%= form.text_field :name, class: "w-full p-2 rounded border focus:ring focus:ring-yellow-400" %>
  </div>

  <div class="mb-4">
    <%= form.label :measurement_unit, class: "block text-sm font-bold text-gray-600" %>
    <%= form.text_field :measurement_unit, class: "w-full p-2 rounded border focus:ring focus:ring-yellow-400" %>
  </div>

  <div class="mb-4">
    <%= form.label :price, class: "block text-sm font-bold text-gray-600" %>
    <%= form.number_field :price, class: "w-full p-2 rounded border focus:ring focus:ring-yellow-400" %>
  </div>

  <div class="mb-4">
    <%= form.label :quantity, class: "block text-sm font-bold text-gray-600" %>
    <%= form.number_field :quantity, class: "w-full p-2 rounded border focus:ring focus:ring-yellow-400" %>
  </div>

  <div class="mb-4">
    <%= form.submit "Save", class: "bg-yellow-300 hover:bg-yellow-500 cursor-pointer font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
